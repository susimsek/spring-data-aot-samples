{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src/main/webapp/next-env.d.ts", "src/main/webapp/**/*.ts", "src/main/webapp/**/*.tsx"],
  "exclude": ["node_modules", "node_modules.link", "src/main/webapp/build", "src/main/webapp/.next"]
}
