{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/main/webapp/next-env.d.ts",
    "src/main/webapp/**/*.ts",
    "src/main/webapp/**/*.tsx",
    "src/main/webapp/.next/types/**/*.ts",
    "src/main/webapp/.next/dev/types/**/*.ts",
    "src/main/webapp/**/*.mts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", "src/main/webapp/build"]
}
