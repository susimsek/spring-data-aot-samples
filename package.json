{
  "name": "note-app",
  "private": true,
  "workspaces": [
    "src/main/webapp"
  ],
  "scripts": {
    "backend:start": "./mvnw -B -ntp -Dskip.installnodenpm=true -Dskip.npm=true spring-boot:run",
    "backend:debug": "./mvnw -B -ntp -Dskip.installnodenpm=true -Dskip.npm=true spring-boot:run -Dspring-boot.run.jvmArguments=\"-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:8000\"",
    "dev": "next dev src/main/webapp",
    "build": "next build src/main/webapp",
    "start": "next start src/main/webapp",
    "lint": "eslint \"src/main/webapp/**/*.{js,jsx,ts,tsx,mjs,cjs}\"",
    "lint:fix": "eslint \"src/main/webapp/**/*.{js,jsx,ts,tsx,mjs,cjs}\" --fix",
    "format": "prettier --write \"{,src/main/webapp/**/,docs/**/}*.{md,json,yml,yaml,js,cjs,mjs,ts,tsx,css,scss,html}\"",
    "format:check": "prettier --check \"{,src/main/webapp/**/,docs/**/}*.{md,json,yml,yaml,js,cjs,mjs,ts,tsx,css,scss,html}\"",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "7.1.0",
    "@fortawesome/free-regular-svg-icons": "7.1.0",
    "@fortawesome/free-solid-svg-icons": "7.1.0",
    "@fortawesome/react-fontawesome": "3.1.1",
    "@reduxjs/toolkit": "2.11.2",
    "axios": "1.13.2",
    "bootstrap": "5.3.8",
    "next": "16.1.4",
    "react": "19.2.3",
    "react-bootstrap": "2.10.10",
    "react-dom": "19.2.3",
    "react-hook-form": "7.71.1",
    "react-redux": "9.2.0"
  },
  "devDependencies": {
    "@types/node": "25.0.10",
    "@types/react": "19.2.9",
    "@types/react-dom": "19.2.3",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.4",
    "eslint-config-prettier": "10.1.2",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=22"
  }
}
